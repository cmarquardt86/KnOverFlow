<h1><%= @question.title %></h1>
<h3><%= @question.content %></h3>
<br />
<h4><%= @question.answers.count %> answers below:</h4>
<ul>
 <% Answers.find_by_question_id(@question.id).each do |answer| %>
 <li><a href="#"><%= answer.content %></a></li>
 <% end %>
 </ul>

 <% if current_user %>
 <%= link_to "Write an answer!", new_question_path %>
 <% end %>